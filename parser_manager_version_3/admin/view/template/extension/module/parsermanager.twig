    }

    function deleteProduct() {
        var selected = [];
        var i = 0;
        var page = getActivePage( window.location.href);
        if (!confirm('Удаление невозможно отменить! Вы уверены, что хотите это сделать?')) {
            return false;
        }
        $('input[class=\'input-product\']:checked').each(function () {
                selected[i] = this.value;
                i++;
            }
        );
        var url = "index.php?route=extension/module/parsermanager/delete&user_token={{ user_token }}";
        url += '&selected=' + selected;
        url += '&page=' + page;
        window.location.assign(url);

    };

    function getActivePage(url) {
        const activeUrl = new URL(url);
        var page = activeUrl.searchParams.get('page');
        return page||'1';
    }

    function addProduct() {
        var url = "index.php?route=extension/module/parsermanager/addproductparser&user_token={{ user_token }}";
        var filter_name = $('#filter_name').attr('value');
        var filter_sku_exist = $('#filter_sku_exist').attr('value');
        var filter_model = $('#filter_model').attr('value');
        var url_product = ($('td[name=product_0] div.delete_url a').attr('href'));
        var sku = $('#addproduct_sku').val();
        var price = $('#addproduct_price').val();
		
        if (filter_name) {
            url += '&filter_name=' + encodeURIComponent(filter_name);
        }

        if (filter_sku_exist) {
            url += '&filter_sku_exist=' + encodeURIComponent(filter_sku_exist);
        }

        if (sku) {
            url += '&sku=' + encodeURIComponent(sku);
        }

        if (price) {
            url += '&price=' + encodeURIComponent(price);
        }

        if (!url_product) {
            alert('Нет ссылки на товар!');
            return false;
        } else {
            url += '&url=' + encodeURIComponent(url_product);
        }

        location = url;

    };

